{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "experimentalDecorators": true,
    "module": "commonjs",
    "inlineSources": true,
    "sourceMap": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "./dist",
    "target": "es2015",
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.*"
  ]
}
